<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:keepScreenOn="true"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.activities.PandaDashboardActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:text="@string/label_DcPwr"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal"
                        />
                    <TextView
                        android:text=""
                        android:layout_width="20dp" />
                    <TextView
                        android:text="@string/label_DcLoad"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/textDcPwr"
                        android:text="@string/default_Dash"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text=""
                        android:layout_width="20dp" />
                    <TextView
                        android:id="@+id/textDcLoad"
                        android:text="@string/default_Dash"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

            <!-- Spacer -->
            <TableRow android:layout_height="50dp" android:layout_width="match_parent">
                <TextView android:text="@string/default_DoubleSpace" />
            </TableRow>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:text="@string/label_BatteryTemperature"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal"
                        />
                    <TextView
                        android:text=""
                        android:layout_width="20dp" />
                    <TextView
                        android:text="@string/label_Soc"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/textBatteryTemperature"
                        android:text="@string/default_Dash"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text=""
                        android:layout_width="20dp" />
                    <TextView
                        android:id="@+id/textPandaUserSoC"
                        android:text="@string/default_Dash"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:background="?attr/colorButtonNormal" />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>

    <!-- debug line -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        >

        <TextView
            android:text="@string/label_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:id="@+id/textDebug"
            android:text="@string/default_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>